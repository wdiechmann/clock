- if user_signed_in?
	%li= link_to t('employees.employees'), employees_path
	%li= link_to t('employees.month_list'), month_list_employees_path
	%li= link_to t('punch_clocks.punch_clocks'), punch_clocks_path
	%li= link_to t('accounts.accounts'), accounts_path
